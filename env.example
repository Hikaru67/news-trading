# Database Configuration
DATABASE_URL=postgresql://trading_user:trading_pass@postgres:5432/news_trading
REDIS_URL=redis://redis:6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Low-latency Direct Fanout (BWEnews client)
DIRECT_FANOUT_ENABLED=true
DISABLE_KAFKA_PUBLISH=false
TELEGRAM_HTTP_URL=http://telegram-bot:8013/signal
EXCHANGE_CHECKER_HTTP_URL=http://exchange-checker:8014/signal

# Exchange API Configuration
# MEXC API
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET_KEY=your_mexc_secret_key_here

# Bybit API
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here

# Gate.io API
GATE_API_KEY=your_gate_api_key_here
GATE_SECRET_KEY=your_gate_secret_key_here

# Trading Configuration
DEFAULT_TRADE_AMOUNT=100
MAX_TRADE_AMOUNT=1000
MIN_TRADE_CONFIDENCE=0.8
REAL_TRADE_ENABLED=false

# Trade Executor Service
TRADE_EXECUTOR_HTTP_PORT=8015
INPUT_MODE=http

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=your_telegram_channel_id_here
TELEGRAM_HTTP_PORT=8013
TELEGRAM_API_BASE=https://api.telegram.org
TELEGRAM_FAST_ACK=true

# Logging Configuration
LOG_LEVEL=INFO

# Monitoring Configuration
PROMETHEUS_PORT=8000
GRAFANA_PORT=3000

# Exchange Checker Service
EXCHANGE_CHECKER_HTTP_PORT=8014
TRADE_EXECUTOR_HTTP_URL=http://trade-executor:8015/signal
INPUT_MODE=http
